{
  "name": "unreal-angelscript-clang-format",
  "displayName": "Unreal AngelScript Clang-Format",
  "description": "Format Unreal Engine AngelScript code using Clang-Format",
  "publisher": "Hazelight",
  "version": "3.0.0",
  "icon": "resources/icon.png",
  "engines": {
    "vscode": "^1.108.1"
  },
  "keywords": [
    "unreal",
    "engine",
    "angelscript",
    "ue5"
  ],
  "categories": [
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:angelscript"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "unreal-angelscript-clang-format.generate-config-file",
        "category": "Unreal AngelScript Clang-Format",
        "title": "Generate Config File"
      }
    ],
    "configuration": {
      "title": "Unreal AngelScript Clang-Format",
      "properties": {
        "unreal-angelscript-clang-format.executable": {
          "type": "string",
          "description": "Path to a custom clang-format.exe executable, can be absolute or relative to the workspace",
          "scope": "resource"
        },
        "unreal-angelscript-clang-format.style": {
          "type": "string",
          "description": "Path to a .clang-format style file, can be absolute or relative to the workspace",
          "scope": "resource"
        }
      }
    }
  },
  "galleryBanner": {
    "color": "#0f0f0f",
    "theme": "dark"
  },
  "qna": "marketplace",
  "license": "SEE LICENSE IN LICENSE",
  "repository": {
    "type": "git",
    "url": "https://github.com/Hazelight/vscode-unreal-angelscript-formatter"
  },
  "bugs": {
    "url": "https://github.com/Hazelight/vscode-unreal-angelscript-formatter/issues"
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --external:clang-format-node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "watch": "npm run esbuild-base -- --sourcemap --watch",
    "lint": "eslint src --ext ts",
    "test": "tsc -p ./ && vscode-test",
    "watch-test": "tsc -p ./ --watch"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/sax": "^1.2.7",
    "@types/vscode": "^1.108.1",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "mocha": "^11.7.5",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "clang-format-node": "^2.0.7",
    "sax": "^1.4.4"
  }
}
